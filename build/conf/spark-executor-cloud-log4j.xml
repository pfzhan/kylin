<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Log4j2">
    <Appenders>
        <Console name="stderr" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %-5p %X{request.project}[%t] %c{2} : %m%n"/>
        </Console>
        <!-- define in kap-lightning-client-->
        <SparkExecutorLocalFileAppender name="local"
                                        metadataIdentifier="${sys:kap.metadata.identifier:-}"
                                        category="${sys:kap.spark.category:-}"
                                        identifier="${sys:kap.spark.identifier:-}"
                                        jobName="${sys:kap.spark.jobName:-}"
                                        project="${sys:kap.spark.project:-}"
                                        mountDir="${sys:kap.spark.mountDir:-}">
            <PatternLayout pattern="%d{ISO8601} %-5p %X{request.project}[%t] %c{2} : %m%n"/>
        </SparkExecutorLocalFileAppender>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="local"/>
            <AppenderRef ref="stderr"/>
        </Root>
    </Loggers>
</Configuration>
